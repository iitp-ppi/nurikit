{
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[cmake]": {
        "editor.defaultFormatter": "josetr.cmake-language-support-vscode",
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[markdown]": {
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": false,
    },
    "[yaml]": {
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[github-actions-workflow]": {
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "cmake.copyCompileCommands": "${workspaceFolder}/build/compile_commands.json",
    "cmake.configureArgs": [
        "-DNURIKIT_TEST_COVERAGE=ON",
        "-DNURIKIT_PYDOC_DEPEND_PYTHON=ON",
    ],
    "editor.unicodeHighlight.allowedCharacters": {
        "Â©": true,
    },
    "files.associations": {
        "*.toml.in": "toml",
        "*.py.in": "python",
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "githubIssues.issueBranchTitle": "${user}/issue-${issueNumber}",
    "license.year": "auto",
    // "license.author": "SNU Compbio Lab",
    // Cannot just set @AUTHOR@ - see bug ymotongpoo/vsc-licenser#135
    "licenser.customHeader": "\nProject @PROJECT@ - Copyright @YEAR@ SNU Compbio Lab.\nSPDX-License-Identifier: Apache-2.0\n",
    "licenser.disableAutoHeaderInsertion": false,
    "licenser.disableAutoSave": false,
    "licenser.license": "Custom",
    "licenser.projectName": "nurikit",
}
