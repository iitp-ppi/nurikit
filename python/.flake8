[flake8]
max-line-length = 79
require-plugins = flake8-pytest-style
ignore = E266,E4,E74,F403,F405,W503
per-file-ignores =
	# imported but unused
	__init__.py: F401
    docs/conf.py*: E261,E501
extend-exclude = build/**,dist/**,**/stubs/**,*.pyc,*.pyi
