[build-system]
requires = ["scikit-build-core"]
build-backend = "scikit_build_core.build"

[project]
name = "@PROJECT_NAME@"
version = "@NURIKIT_FULL_VERSION@"
description = "*The* fundamental software platform for chem- and bio-informatics"
readme = "README.md"
requires-python = ">=3.7"
license = {file = "LICENSE"}
authors = [
    {name = "Nuri Jung", email = "jnooree@snu.ac.kr"}
]
maintainers = [
    {name = "Nuri Jung", email = "jnooree@snu.ac.kr"}
]
classifiers = [
    "Development Status :: 1 - Planning",
    "Intended Audience :: Science/Research",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: Apache Software License",
    "Programming Language :: C++",
    "Programming Language :: Python :: 3 :: Only",
    "Programming Language :: Python :: 3.8",
    "Topic :: Software Development :: Libraries",
    "Topic :: Scientific/Engineering",
    "Topic :: Scientific/Engineering :: Bio-Informatics",
    "Topic :: Scientific/Engineering :: Chemistry",
    "Operating System :: POSIX :: Linux",
]

[project.urls]
Repository = "https://github.com/seoklab/nurikit.git"

[tool.scikit-build]
minimum-version = "0.4"
ninja.make-fallback = false

build-dir = "@PROJECT_BINARY_DIR@"
cmake.minimum-version = "@CMAKE_MINIMUM_REQUIRED_VERSION@"
cmake.build-type = "@CMAKE_BUILD_TYPE@"
cmake.verbose = @NURIKIT_VERBOSE_CMAKE@

sdist.exclude = ["*.h", "*.cpp", "*.in", "*.so"]
wheel.packages = ["python/nuri"]
wheel.install-dir = "nuri"
